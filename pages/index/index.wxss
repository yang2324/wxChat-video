/* 头部 */
.header{width: 100%; position:fixed;z-index: 999;position: relative;}

/* 视频 */
.swiper {height: 500rpx;width: 100%;overflow: hidden;}
.swiper .img {height: 100%; width: 100%;}
.MyVideo {width:100%;height:500rpx;}
.playBnt{width:100rpx;height:100rpx;position:absolute;top:200rpx;left:43%}
.number{width: 100rpx;height: 45rpx;text-align: center;line-height: 45rpx;border-radius: 45rpx;font-size: 24rpx;
     background-color: rgba(0, 0, 0, 0.4);color: #fff;position: absolute;bottom: 30rpx;right: 20rpx;}

.dots{ display: flex; justify-content: center; position: absolute; right: 0;left: 0; bottom:30rpx;margin: 0 auto;}  
/*未选中时的小圆点样式 */
.dot{ width: 100rpx;  height: 45rpx;   border-radius: 45rpx;margin-right: 10rpx;background-color: #fff;
    font-size: 24rpx;color: #333;text-align: center;line-height: 45rpx;}  
/*选中以后的小圆点样式  */
.dots .active{  width: 100rpx;   height: 45rpx;background-color: #22ac38;color: #fff;}  
